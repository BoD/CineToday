<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.Button.Colored" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="movieCardTitle" parent="CardTitle">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="movieCardOriginalTitle" parent="CardText">
        <item name="android:textColor">@color/secondary_text_light</item>
    </style>

    <style name="movieCardDuration" parent="CardText">
    </style>

    <style name="movieCardShowtime" parent="CardText">
        <item name="android:background">@drawable/shape_showtime_bg</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="movieDetails">
        <item name="android:gravity">start</item>
    </style>

    <style name="Movie.Details.Title" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Title</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Movie.Details.Field" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Movie.Details.Field.Synopsis">
        <item name="android:gravity">start</item>
    </style>

    <style name="Movie.Details.Theater.Name" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body2</item>
        <item name="android:gravity">start</item>
    </style>

</resources>